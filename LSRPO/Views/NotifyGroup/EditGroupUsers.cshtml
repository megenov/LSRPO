@using LSRPO.Core.Models.NotifyGroup
@model IEnumerable<EditGroupUsersViewModel>

@{
    ViewData["Title"] = $"Редактиране на потребители в {ViewBag.GroupName}";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">

                    <form id="edit-group-users" method="post" enctype="multipart/form-data" asp-area="" asp-controller="NotifyGroup" asp-action="EditGroupUsers">

                    <input type="hidden" name="GroupId" value="@ViewBag.GroupId" />

                    <div class="card-header">
                        <button id="editGroupUsers-submit" type="submit" class="btn btn-success">Запис на потребители</button>
                        <a asp-area="" asp-action="ClearGroupUsers" asp-controller="NotifyGroup" asp-route-id="@ViewBag.GroupId" class="btn btn-primary">Изчистване на потребители</a>
                        <a asp-area="" asp-action="NotifyGroupList" asp-controller="NotifyGroup" class="btn btn-warning">Връщане към всички групи</a>
                    </div>
                    <!-- /.card-header -->

                    <div class="card-body">
                        @*<table id="example1" class="table table-bordered table-striped">*@
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 10px"></th>
                                    <th>Потребителско име</th>
                                    <th>Име</th>
                                    <th>Роля</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var notifyUser in Model)
                                {
                                    <tr>

                                        <td>
                                            <div class="icheck-primary d-inline">
                                                <input type="checkbox" id="@notifyUser.UserId" name="UserIds" value=@notifyUser.UserId @(notifyUser.IsSelected ? "checked" : "")>
                                                <label for="@notifyUser.UserId"><text hidden>@notifyUser.IsSelected</text></label>
                                            </div>
                                        </td>

                                        <td>@notifyUser.UserName</td>
                                        <td>@notifyUser.FullName</td>
                                        <td>@notifyUser.UserRole</td>

                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th>Потребителско име</th>
                                    <th>Име</th>
                                    <th>Роля</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->

                    </form>

                </div>
                <!-- /.card -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

<!-- /.content -->
<!-- DataTables  & Plugins -->
<script src="~/plugins/datatables/datatables/jquery.dataTables.min.js"></script>
<script src="~/plugins/datatables/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="~/plugins/datatables/datatables-responsive/js/dataTables.responsive.min.js"></script>
<script src="~/plugins/datatables/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
<script src="~/plugins/datatables/datatables-buttons/js/dataTables.buttons.min.js"></script>
<script src="~/plugins/datatables/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
<script src="~/plugins/datatables/jszip/jszip.min.js"></script>
<script src="~/plugins/datatables/pdfmake/pdfmake.min.js"></script>
<script src="~/plugins/datatables/pdfmake/vfs_fonts.js"></script>
<script src="~/plugins/datatables/datatables-buttons/js/buttons.html5.min.js"></script>
<script src="~/plugins/datatables/datatables-buttons/js/buttons.print.min.js"></script>
<script src="~/plugins/datatables/datatables-buttons/js/buttons.colVis.min.js"></script>

<!-- Page specific script -->
<script>
    $(function () {
      $("#example1").DataTable({
        "responsive": true, "lengthChange": true, "autoWidth": false,
        "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
      }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
      $('#example2').DataTable({
        "paging": false,
        "lengthChange": true,
        "searching": false,
        "ordering": true,
        "order": [[ 0, "desc" ]],
        "info": true,
        "autoWidth": false,
        "responsive": true,
      });
    });
</script>