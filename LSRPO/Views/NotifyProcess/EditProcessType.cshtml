@using LSRPO.Core.Models.NotifyProcess
@model EditProcessTypeViewModel

@{
    ViewData["Title"] = "Редактиране на тип процес";
}

<div class="row">
    <div class="col-sm-12 col-lg-6 col-xl-5">
        <div class="card card-primary card-outline">
            <div class="card-body box-profile">

                <form id="edit-processType" method="post" enctype="multipart/form-data" asp-area="" asp-controller="NotifyProcess" asp-action="EditProcessType">
                    <input type="hidden" name="ProcessTypeId" value="@Model.ProcessTypeId" />

                    <div class="card-body" style="display: block;">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="ProcessTypeId" class="form-label"></label>
                            <input disabled asp-for="ProcessTypeId" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="form-label"></label>
                            <input asp-for="Description" class="form-control" aria-required="true" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <button id="editProcessType-submit" type="submit" class="btn btn-block btn-success">Редактиране</button>
                        </div>
                        <div class="col-6">
                            <a asp-area="" asp-action="ProcessTypeList" asp-controller="NotifyProcess" class="btn btn-block btn-warning">Отказ</a>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}